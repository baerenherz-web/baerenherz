---
import type { CollectionEntry } from 'astro:content'
import { Image } from 'astro:assets'

type Props = CollectionEntry<'aktivitaeten'>['data']

const { title, cover, coverAlt, link } = Astro.props

import Layout from '@layouts/Layout.astro'
import Container from '@components/container.astro'
import Link from '@components/ui/Link.astro'

import partners from '@assets/logos/sponsoren2023.png'
---

<Layout title={title}>
  <article class="flex min-h-screen items-center justify-center bg-gray-100">
    <div class="m-6 rounded bg-white p-8 shadow-lg">
      <div class="py-6">
        <Link href="/aktivitaeten">« Aktivitäten</Link>
      </div>
      <div class="">
        {cover && <Image width={1020} src={cover} alt={coverAlt} />}
      </div>

      <div class="my-8">
        <h1 class="py-4 text-3xl">{title}</h1>
        <div class="max-width-80 prose max-w-prose lg:prose-xl">
          <!-- <a href={link}>Bildgalerie</a> -->
          <slot />
        </div>
      </div>

      {/* Partners */}
      <!-- <div class="flex gap-10">
      <div class="flex-1">
        <h3 class="text-3xl font-bold">Unsere Partner:</h3>
      </div>
      <div class="flex-2">
        <Image src={partners} alt="random" />
      </div>
    </div> -->
    </div>
  </article>
</Layout>
