---
import Logo from '@assets/logo_header.png'

import Container from '@components/container.astro'
import Link from '@components/ui/Link.astro'
// All internal links now use locale-prefixed Link.astro

import Dropdown from './dropdown.astro'
import { Astronav, MenuItems, MenuIcon } from 'astro-navbar'

const IsNotSwitzerland = !Astro.url.pathname.startsWith('/ch');


function getLocalePrefix() {
  if (typeof Astro !== 'undefined' && Astro.url && Astro.url.pathname) {
    if (Astro.url.pathname.startsWith('/ch')) return '/ch';
    if (Astro.url.pathname.startsWith('/de')) return '/de';
  }
  if (typeof window !== 'undefined') {
    if (window.location.pathname.startsWith('/ch')) return '/ch';
    if (window.location.pathname.startsWith('/de')) return '/de';
  }
  return '/de';
}

const langPrefix = getLocalePrefix();
const menuItems = [
  {
    title: 'Über uns',
    children: [
      {
        title: 'Mission',
        path: `${langPrefix}/about`
      },
      {
        title: 'Philosophie',
        path: `${langPrefix}/about#philosophie`
      },
      {
        title: 'Vorstand',
        path: `${langPrefix}/about#vorstand`
      },
      {
        title: 'Statuten',
        path: `${langPrefix}/about#statuten`
      }
    ]
  },
  { title: 'Mitgliedschaft', path: `${langPrefix}/mitgliedschaft` },
  { title: 'Projekte', path: `${langPrefix}/projekte` },
  { title: 'Aktivitäten',
        children: [
          { title: 'Alle Aktivitäten', path: '/aktivitaeten/' },
          { icon: '/flags/ch.svg', title: 'Charity Golfturnier 2026', path: '/ch/aktivitaeten/save-the-date-golfturnier-2026' },
          { icon: '/flags/ch.svg', title: 'Charity Skitag 2026', path: '/ch/aktivitaeten/save-the-date-skitag-2026' },
          { icon: '/flags/de.svg', title: 'Charity Golfturnier 2025', path: '/de/aktivitaeten/save-the-date-golfturnier-2025-de' },
          { icon: '/flags/ch.svg', title: 'Charity Golfturnier 2025', path: '/ch/aktivitaeten/charity-golfturnier-2025' },
          { icon: '/flags/ch.svg', title: 'Charity Skitage 2025', path: '/ch/aktivitaeten/charity-skitag-bericht2025' },
          { icon: '/flags/ch.svg', title: 'Charity Golfturnier 2024', path: '/ch/aktivitaeten/charity-golfturnier-2024' },
          { icon: '/flags/ch.svg', title: 'Charity Skitage 2024', path: '/ch/aktivitaeten/charity-skitag-bericht2024' },
          { icon: '/flags/ch.svg', title: 'Charity Golfturnier 2023', path: '/ch/aktivitaeten/charity-golfturnier-bericht2023' },
          { icon: '/flags/ch.svg', title: 'Charity Skitag 2023', path: '/ch/aktivitaeten/charity-skitag-bericht2023' },
          { icon: '/flags/ch.svg', title: 'Charity Golfturnier 2022', path: '/ch/aktivitaeten/charity-golfturnier-2022' }
        ]
      },
      { title: 'News', path: '/news' }
]

---

<Container>
  <header class="my-5 flex flex-col items-center justify-between lg:flex-row">
    <Astronav>
      <div class="flex w-full items-center justify-between lg:w-auto">
        <Link href="/">
          <img
            src={Logo.src}
            class="aspect-auto h-20 object-cover md:h-28"
            alt="Logo Bärenherz"
          />
        </a>

        <!-- hamburger button -->
        <div class="block lg:hidden">
          <MenuIcon class="h-8 w-8 text-[#4b4e52]" />
        </div>
      </div>
      <MenuItems class="mt-2 hidden w-full lg:mt-0 lg:flex lg:w-auto">
        <ul class="flex flex-col text-[1.3rem] lg:flex-row lg:gap-3">
          {
            menuItems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuItems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      class="flex items-center gap-2 py-2 text-gray-600 hover:bg-[#dfecf7] hover:text-gray-900 lg:px-3"
                      href={item.path}
                    >
                      {item.icon && <img src={item.icon} alt="" class="inline w-5 h-5" />}
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        {!IsNotSwitzerland && (
        <div class="mt-3 flex items-center gap-4 lg:hidden">
          <Link href="/spenden" style="inverted">Jetzt spenden!</Link>
        </div>
        )}
      </MenuItems>
    </Astronav>
    <div class="flex items-center gap-4">
      {!IsNotSwitzerland && (
      <div class="hidden lg:flex">
        <Link href="/ch/spenden" style="inverted">Jetzt spenden!</Link>
      </div>
      )}
      <!-- Language Switcher -->
<div class="relative ml-4">
  <div class="relative">
    <div class="relative inline-block text-left">
  <button id="lang-toggle" class="inline-flex justify-center w-full rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-blue-50">
    <span id="lang-label" class="flex items-center gap-2">
    <!-- Wird per JS ersetzt -->
    </span>
    <svg class="ml-2 -mr-1 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 011.08 1.04l-4.25 4.25a.75.75 0 01-1.08 0L5.21 8.27a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
    </svg>
  </button>

  <div id="lang-menu" class="hidden absolute right-0 z-10 mt-2 w-40 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5">
    <div class="py-1">
      <a href="/ch" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-blue-100">
        <img src="/flags/ch.svg" alt="CH" class="w-5 h-5" /> Schweiz
      </a>
      <a href="/de" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-blue-100">
        <img src="/flags/de.svg" alt="DE" class="w-5 h-5" /> Deutschland
      </a>
    </div>
  </div>
</div>
<script>
  const toggle = document.getElementById('lang-toggle');
  const menu = document.getElementById('lang-menu');
  const label = document.getElementById('lang-label');

  // Sprach-Flaggen + Namen
  const languages = {
    ch: {
      label: 'Schweiz',
      flag: '/flags/ch.svg',
      alt: 'CH'
    },
    de: {
      label: 'Deutschland',
      flag: '/flags/de.svg',
      alt: 'DE'
    }
  };

  let lang = 'de';
  if (window.location.pathname.startsWith('/ch')) lang = 'ch';
  if (window.location.pathname.startsWith('/de')) lang = 'de';

  // Label im Button setzen
  if (label) {
    const { flag, label: text, alt } = languages[lang];
    label.innerHTML = `<img src="${flag}" alt="${alt}" class="w-5 h-5 mr-2" /> ${text}`;
  }

  // Dropdown öffnen/schließen
  if (toggle && menu) {
    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>
  </div>
</div>

      </div>
    </div>
  </header>
</Container>
