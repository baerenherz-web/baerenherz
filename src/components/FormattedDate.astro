---
interface Props {
  date: Date
}

const { date } = Astro.props

if (!(date instanceof Date) || isNaN(date.getTime())) {
  throw new Error(`Invalid date passed to FormattedDate: ${date}`);
}
---

<time datetime={date.toISOString()}>
  {date.toLocaleDateString('de-CH', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  })}
</time>
