---
import { getCollection } from 'astro:content'
import { Image } from 'astro:assets'
import FormattedDate from '@components/FormattedDate.astro'
import Container from '@components/container.astro'
import headerImg from '@assets/news/postheader.webp'

// Locale aus URL ableiten
const pathname = Astro.url.pathname || '/'
const langPrefix = pathname.startsWith('/ch') ? '/ch' : '/de'

// Posts holen und sicher nach Datum sortieren
const posts = (await getCollection('news')).sort((a, b) => {
  const ad = new Date(a.data.pubDate).getTime()
  const bd = new Date(b.data.pubDate).getTime()
  return bd - ad
})
---

<Container class="mx-14 my-10 flex flex-col">
  <div class="my-6 justify-items-center py-2">
    <Image src={headerImg} width={600} height={400} alt="header post" />
  </div>

  <ul>
    {
      posts.map((post) => {
        const href =
          post.slug === 'save-the-date-golfturnier-2025'
            ? `${langPrefix}/aktivitaeten/charity-golfturnier-2025`
            : `${langPrefix}/news/${post.slug}/`

        return (
          <li class="my-5 list-none">
            <a href={href}>
              {
                // Cover nur rendern, wenn vorhanden
                post.data.cover && (
                  <Image
                    width={720}
                    height={360}
                    src={post.data.cover}
                    alt={post.data.coverAlt ?? ''}
                    loading="lazy"
                    decoding="async"
                  />
                )
              }

              <div class="mb-6 mt-2 pb-10 pt-4">
                <h4 class="text-3xl">{post.data.title}</h4>

                <p class="pb-4 pt-2 text-base text-gray-500">
                  <FormattedDate date={new Date(post.data.pubDate)} />
                </p>

                <div class="prose-base line-clamp-4 lg:prose-xl">
                  {post.data.description}
                </div>

                <div class="pt-5">
                  <p class="text-2xl italic text-[#033277]">weiterlesen...</p>
                </div>
              </div>
            </a>
          </li>
        )
      })
    }
  </ul>
</Container>
