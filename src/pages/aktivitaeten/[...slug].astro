---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import AktivitaetenPost from "../../layouts/AktivitaetenPost.astro";

interface Props {
  post: CollectionEntry<"aktivitaeten">;
}

export async function getStaticPaths() {
  try {
    const posts = await getCollection("aktivitaeten");
    return posts.map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
  } catch (error) {
    console.error("Error fetching aktivitaeten posts:", error);
    return [];
  }
}

const { post } = Astro.props as Props;

if (!post) {
  return Astro.redirect("/404");
}

const { Content } = await post.render();
---

<AktivitaetenPost {...post.data}>
  <Content />
</AktivitaetenPost>
