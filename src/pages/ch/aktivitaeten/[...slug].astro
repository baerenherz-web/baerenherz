---
import { getCollection } from 'astro:content'
import AktivitaetenPost from '../../../layouts/AktivitaetenPost.astro'

const posts = await getCollection('aktivitaeten-ch')
const { slug } = Astro.params
const post = posts.find((page) => page.slug === slug)

// âœ… HIER LOGGEN
console.log('DEBUG: Slug ist', slug)
console.log('DEBUG: Gefundener Post:', post)

if (!post) return Astro.redirect('/404')

const { Content } = await post.render()
---

<AktivitaetenPost {...post.data}>
  <Content />
</AktivitaetenPost>